<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StoryUnit</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<nav class="navbarStoryUnit navbar-expand-lg clearfix">
		<div class="navHolder">
			<a class="float-left" href="~/Views/Home/Index.cshtml">
				<img src="~/Content/StoryUnitLogoText.png" class="navImg"/>
			</a>
			<div class="float-right collapse navbar-collapse" style="height:100%!important;">
				<div class="navbar-nav mr-auto" style="height:100%;">
					<a class="navItem" href="#">Home</a>
					<a class="navItem" href="#">Pagina 2</a>
					<a class="navItem" href="#">Pagina 3</a>
				</div>
			</div>
		</div>
	</nav>
    <div class="container body-content">
		<div style="margin-top: 80px;">
			@RenderBody()
			<hr />
			<footer>
				<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			</footer>
		</div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
